{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "dist"
  },
  "include": [
    "src/unified/**/*.ts",
    "src/config/**/*.ts",
    "src/airtable/**/*.ts",
    "src/github/**/*.ts",
    "src/types/**/*.d.ts"
  ]
}